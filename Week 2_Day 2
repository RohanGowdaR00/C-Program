//P99. Global and local declaration.
#include<stdio.h>

int var=1;

int main()
{
    int var=2, result;
    result = variable(var);
    printf("%d",result);
    return 0;
}
int variable(int a)
{
    int res = a;
    return res;
}

//P100. Global variable of type int, float, char, double.
#include<stdio.h>

int variable1(int a);
float variable2(float b);
char variable3(char mychar);
double variable4(double a);

int a;
float b;
char mychar;
double c;

int main()
{
    int a;
    float b;
    char mychar;
    double c;
    
    int result1 = variable1(a);
    float result2 = variable2(b);
    char result3 = variable3(mychar);
    double result4 = variable4(c);
    printf("%d\n", a);
    printf("%f\n", b);
    printf("%c\n", mychar);
    printf("%lf\n", c);

    return 0;
}
int variable1(int a)
{
    int res1 = a;
    return res1;
}
float variable2(float b)
{
    float res2 = b;
    return res2;
}
char variable3(char mychar)
{
    char res3 = mychar;
    return res3;
}
double variable4(double c)
{
    double res4 = c;
    return res4;
}

