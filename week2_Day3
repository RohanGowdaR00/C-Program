//103. 2nd biggest

#include <stdio.h>

int main()
{

    int max,n,i,j,temp;
    printf("enter array size:\n");
    scanf("%d",&n);
    int arr[n];
    printf("enter the array elements:\n");
    for(i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    for(i=0; i<n; i++)
    {
        for(j=0; j<n; j++)
        {
            if(arr[i]>arr[j])
            {
                temp=arr[i];
                arr[i]=arr[j];
                arr[j]=temp;
            }
        }

    }


   printf("%d",arr[1]);

    return 0;
}


