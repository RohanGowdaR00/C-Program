printf("%d",b);
return 0;
}

//30. Swap two numbers

#include<stdio.h>
int main()
{
int a,b,temp;
printf("enter a:\n");
printf("enter b:\n");
scanf("%d %d",&a,&b);
temp=a;
a=b;
b=temp;
printf("%d\n %d\n",a,b);
return 0;
}

