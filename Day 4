//50. Perimeter & Area of rectangle

#include<stdio.h>
#include<string.h>
int main()
{
float l,b,perimeter,area;
printf("enter length & breadth:\n");
scanf("%f %f",&l,&b);
perimeter=2*(l+b);
area=l*b;
printf("perimeter is %f\n",perimeter);
printf("area is %f",area);
return 0;
}

//P51. surface area & volume of cube

#include<stdio.h>
#include<string.h>
int main()
{
int side,volume,surface_area;
printf("enter the side:\n");
scanf("%d",&side);
surface_area=6*side*side;
volume=side*side*side;
printf("surface_area is %d\n",surface_area);
printf("volume is %d",volume);
return 0;
}

//P52. Absolute value

#include<stdio.h>
#include<string.h>
int main()
{
int n;
printf("enter the num:\n");
scanf("%d",&n);
if(n<0)
    n=(-1)*n;
else
    n=1*n;
printf("%d",n);
return 0;
}

