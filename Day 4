//P27. Single increment & single decrement

#include<stdio.h>
int main()
{
    int a=10,b=2;
    int a1,a2,b1,b2;
    a1=a++;
    b1=b--;
    a2=++a;
    b2=--b;
    printf("%d\n %d\n %d\n %d\n ",a1,b1,a2,b2);
    return 0;

}

//P28. Perform b no of increments & c no of decrement on a

#include<stdio.h>
int main()
{
    int a=10,b=2,c=3;
    a+=b;
    a-=c;
    printf("%d\n %d\n %d\n ",a,b,c);
    return 0;
}

