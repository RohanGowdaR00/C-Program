a1= a&b > c;
a2= a&b < c;
printf("%d %d",a1,a2);
return 0;
}

//44. bitwise operator

#include<stdio.h>
#include<stdbool.h>
int main()
{
int a,b,c,d,e,f,g,h;
printf("enter a,b\n");
scanf("%d %d",&a,&b);
c=a|b;
d=a&b;
e=a^b;
f=a<<b;
g=a>>b;
h=~a;
printf("%d %d %d %d %d %d",c,d,e,f,g,h);
return 0;
}

//47. Slope of line joining them in 2D

#include<stdio.h>
#include<stdbool.h>
int main()
{
int x1,x2,y1,y2,slope;
printf("enter x coor\n");
printf("enter y coor\n");
scanf("%d %d %d %d",&x1,&x2,&y1,&y2);
slope=(y2-y1)/(x2-x1);
printf("(%d,%d)& (%d,%d) is %d",x1,x2,y1,y2,slope);
return 0;
}

//48. Area of circle fits square of side 'a'

#include<stdio.h>
#define PI 3.142
int main()
{
int a;
float area;
printf("enter a coor\n");
scanf("%d",&a);
area=PI*(a*a/4);
printf("%f",area);
return 0;
}

