//34. Celsius to Fahrenheit & vice versa

#include<stdio.h>
int main()
{
float celsius,fahreneit;
printf("enter celsius:\n");
scanf("%f",&celsius);
fahreneit=(celsius*9/5)+32;
printf("%f\n",fahreneit);
return 0;
}

#include<stdio.h>
int main()
{
float celsius,fahreneit;
printf("enter fahreneit:\n");
scanf("%f",&fahreneit);
celsius=(fahreneit-32)*5/9;
printf("%f\n",celsius);
return 0;
}

//35. Arithmetic operations

#include<stido.h>
